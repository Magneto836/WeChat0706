/* pages/order/order.wxss */
.textarea-content {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.textarea-content textarea {
  width: 95%;
  height: 200rpx; /* 调整这个值以改变textarea的高度 */
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
  border-radius: 10rpx;
  resize: none; /* 防止用户手动调整大小 */
}

.section {
  display: flex;
  justify-content: space-around;
  margin: 20rpx;
}

.radio-group {
  display: flex;
  align-items: center;
}

.radio-group radio {
  margin: 0 20rpx;
}

button {
  height: 90rpx;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 50%;
  background-color: #1aad19;
  color: #fff;
  border-radius: 10rpx;
  font-size: 36rpx;
}