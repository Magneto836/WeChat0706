.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 20px;
}

.nickname, .account-id {
  font-size: 20px;
  margin-bottom: 10px;
}

.add-friend-button {
  background-color: #aaedf0;
  color: #fff;
  padding: 10px 20px;
  border-radius: 5px;
}
