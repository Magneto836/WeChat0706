.inputBox {
    width: 70%;
    padding: 6rpx 10rpx;
    margin: 4rpx;
    margin-left: 100rpx;
    box-sizing: border-box;
    border: 1rpx solid #555;
    outline: none;
}

.circleImage{
    margin-left: 250rpx;
    margin-top: 100rpx;
    height: 245rpx;
    width: 245rpx;
    border-radius:50%;
}


.userNickname {
    margin-top: 50rpx;
    margin-left: 300rpx;
    font-size: large;
}

.label-list{
    display: flex;
    width: 100%;
    height: 120rpx;
    align-items: center;
    border-bottom: 1rpx solid #e8e8e8;
}
.label-list .label {
    color: #333;
    font-size: 36rpx;
    margin-left: 80rpx;
    font-weight: bold;
}
.input-box {
  flex: 1; /* Take remaining space in the flex container */
  display: flex;
  align-items: center;
  padding-left: 20rpx; /* Adjust padding as needed */
}
.place {
    align-items: center;
    font-size: 36rpx;
    left: 30rpx;
    vertical-align:middle;
}

.buttonType {
    margin-left: 200rpx;
    margin-top: 20rpx;
}

.confirmButtonType {
    margin-left: 200rpx;
    margin-top: 100rpx;
}

page{
  height:100%
}
.page-container {
  background-color: #cbf1f5; 
  padding: 0rpx; /* 页面内容的内边距，根据需要调整 */
  width: 100%;
  height: 100%; /* 让容器高度占满整个页面 */
}

.RegistHelpText {        
  font-family: "宋体";
  font-size: 35rpx; /* 根据需要调整字体大小 */
