/* pages/search/search.wxss */
.container {
  padding: 20px;
}

.search-bar {
  display: flex;
  align-items: center;
  border: 2px solid #D3D3D3;
  border-radius: 20px;
  padding: 5px;
  margin-bottom: 20px;
}

.search-icon {
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.search-input {
  flex: 1;
  border: none;
  outline: none;
  padding: 5px 10px;
  font-size: 16px;
  color: #808080;
}

.search-button {
  background-color: #FFA500;
  color: white;
  border: none;
  border-radius: 15px;
  padding: 5px 15px;
  font-size: 16px;
  margin-left: 10px;
  cursor: pointer;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ddd;
  margin-bottom: 20px;
}

.tab {
  padding: 10px 20px;
  cursor: pointer;
  font-size: 16px;
}

.tab[data-active="true"] {
  color: #FFA500;
  border-bottom: 2px solid #FFA500;
}

.post, .user {
  background-color: #f9f9f9;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
  margin-bottom: 10px;
}

.header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.info {
  display: flex;
  flex-direction: column;
}

.username, .timestamp {
  font-size: 16px;
  color: #333;
}

.content {
  margin-top: 10px;
  font-size: 14px;
  color: #666;
}

.tags {
  margin-top: 10px;
}

.tag {
  display: inline-block;
  background-color: #eee;
  color: #333;
  padding: 2px 5px;
  border-radius: 3px;
  margin-right: 5px;
}

.post-button {
  width: 100%;
  padding: 10px;
  background-color: #FFA500;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
}
