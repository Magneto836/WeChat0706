.inputBox {
  width: 70%;
  padding: 6rpx 10rpx;
  margin: 4rpx;
  margin-left: 100rpx;
  box-sizing: border-box;
  border: 1rpx solid #555;
  outline: none;
}

.circleImage{
  justify-content: center  !important;
  align-items: center  !important;
  height: 100%;
  width: 100%;
  border-radius: 20%;
  object-fit: cover; /* 确保图片按比例缩放并裁剪以填充容器 */
}

.avatar-wrapper {
  border: none;
  margin-top: 100rpx;
  padding: 10px;
  justify-content: center;
  align-items: center;
  margin: 0;
  background-color: #f0f0f0;
  border-radius: 20%;
  cursor: pointer;
  display: inline-block;
  transition: background-color 0.3s;
  width: 150px !important;
  height: 150px !important;
  flex: none; /* 禁止被 flex 影响 */
}

/* 当 button 被点击时的样式 */
.avatar-wrapper:active {
  background-color: #e0e0e0;
}

.userNickname {
  margin-top: 50rpx;
  text-align: center;
  font-size: large;
}

.label-list {
  display: flex;
  width: 100%;
  height: 120rpx;
  align-items: center;
  border-bottom: 1rpx solid #e8e8e8;
}

.label-list .label {
  color: #333;
  font-size: 36rpx;
  margin-left: 30rpx;
  font-weight: bold;
}

.input-box {
  flex: 1; /* Take remaining space in the flex container */
  display: flex;
  align-items: center;
  padding-left: 20rpx; /* Adjust padding as needed */
}

.place {
  align-items: center;
  font-size: 36rpx;
  left: 30rpx;
  vertical-align: middle;
}

.buttonType {
  width: 70%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
  display: block;
}

.confirmButtonType {
  width: 70%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 100rpx;
  display: block;
}

page {
  height: 100%;
}

.page-container {
  background-color: #cbf1f5;
  
  padding: 0rpx; /* 页面内容的内边距，根据需要调整 */
  width: 100%;
  height: 100%; /* 让容器高度占满整个页面 */
}

.RegistHelpText {        
  font-family: "宋体";
  font-size: 35rpx; /* 根据需要调整字体大小 */
  line-height: 1.2; /* 根据需要调整行高 */
  font-weight: bold;
  text-align: center;
  color: #697fa8;
}

.ShowBtn:not([size='mini']) { 
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white; 
  margin-right: 5rpx;
  width: 150rpx; 
  height: 40rpx;
  color: green;
  font-size: 8px;
}