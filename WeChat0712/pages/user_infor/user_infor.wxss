/* pages/user_infor/user_infor.wxss */
.container {
  padding: 10px;
  background-color: #f5f5f5;
  overflow-y: auto;
}

.header {
  width:90%;
  display: flex;
  flex-direction: row;
  text-align: center;
  margin-bottom: 10px;
  font-weight: bold;
  background-color: #fff;
}

.post {
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  padding: 15px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 10px;
}

.info {
  display: flex;
  flex-direction: column;
}

.username {
  font-weight: bold;
  margin-bottom: 5px;
}

.timestamp {
  color: #888;
  font-size: 12px;
}

.content {
  margin-bottom: 10px;
}

.tags {
  margin-bottom: 10px;
}

.tag {
  background-color: #e0e0e0;
  border-radius: 5px;
  padding: 2px 8px;
  margin-right: 5px;
  font-size: 12px;
  color: #555;
}

.post-image {
  margin-bottom: 10px;
}

.post-image image {
  width: 100%;
  border-radius: 5px;
}


.post-button {
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 50px;
  height: 50px;
  border-radius: 10px;
  background-color: #ff2288;
  color: white;
  font-size: 20px;
  text-align: center;
  line-height: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
}

