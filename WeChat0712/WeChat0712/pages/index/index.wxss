.container {
  display: flex;
  padding: 10px;
  background-color: #d3d3d3;
  overflow-y: auto;
}
.search-bar {
  display: flex;
  align-items: center;
  border: 2px solid #FFA500;
  background-color: #ffffff;
  border-radius: 20px; 
  padding: 5px;
  margin-bottom: 10px;
}

.search-icon {
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.search-input {
  flex: 1;
  border: none;
  outline: none;
  padding: 5px 10px;
  font-size: 16px;
  color: #666;
}

.search-button {
  background-color: #FFA500;
  color: white;
  border: none;
  border-radius: 15px;
  font-size: 16px;
  margin-right: 5px;
}
.tab-bar {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-bottom: 1px solid #ddd;

}

.tab {
  padding: 10px 20px;
  cursor: pointer;
  font-size: 13px;
}

.tab[data-active="true"] {
  color: #FFA500;
  border-bottom: 2px solid #FFA500;
}

.header {
  width:90%;
  display: flex;
  flex-direction: row;
  text-align: center;
  margin-bottom: 10px;
  font-weight: bold;
  background-color: #fff;
}

.post {
  width: 90%;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 15px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 10px;
}

.info {
  display: flex;
  flex-direction: column;
}

.username {
  font-weight: bold;
  margin-bottom: 5px;
}

.timestamp {
  color: #888;
  font-size: 12px;
}

.content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10px;
}

.tags {
  margin-bottom: 10px;
}

.tag {
  background-color: #e0e0e0;
  border-radius: 5px;
  padding: 2px 8px;
  margin-right: 5px;
  font-size: 12px;
  color: #555;
}

.post-image {
  margin-bottom: 10px;
}

.post-image image {
  width: 100%;
  border-radius: 5px;
}


.post-button {
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 50px;
  height: 50px;
  border-radius: 10px;
  background-color: #ff2288;
  color: white;
  font-size: 20px;
  text-align: center;
  line-height: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
}

